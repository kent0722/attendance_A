<%= provide(:title, 'basic-info') %>

<%= form_with(model: @user, url: update_overtime_requests_user_path(date: @first_day),
　　local: true, method: :patch) do |f| %>
    <div class="modal-dialog modal-lg modal-dialog-center">
      <div class="modal-content">
        <button type="button" class="close close-button" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
        <h1 class="modal-title">【残業申請】</h1>
       
        <div class="row">
          <div class="col-md-10 col-md-offset-1">
            <table class="table table-striped table-bordered table-condensed">
              <thead>
                <tr class="text-center">
                  <td>日付</td>
                  <td>曜日</td>
                  <td colspan="6">終了予定時間</td>
                  <td>翌日</td>
                  <td colspan="6">業務処理内容</td>
                  <td colspan="6">指示者確認㊞</td>
                </tr>
              </thead>
              <tbody>
                <% @attendances.each do |day| %>
                  <%= f.fields_for "attendances[]", day do |attendance| %> <!-- ブロック内でattendanceを定義する -->
                    <tr class="text-center">
                      <td><%= l(day.worked_on, format: :short) %></td>
                      <td><%= $days_of_the_week[day.worked_on.wday] %></td>
                      <td>
                        <div>
                          <%= select_tag "attendances[][next_day_start_time(4i)]", 
                                       options_for_select((1..23).map { |h| ["#{format('%02d', h)}", h] }),
                                       include_blank: true, class: "form-control modal-form" %>
                          ：
                          <%= select_tag "attendances[][next_day_start_time(5i)]",
                                         options_for_select((0..59).map { |m| ["#{format('%02d', m)}", m] }),
                                         include_blank: true, class: "form-control modal-form" %>
                        </div>
                      </td>
                      <td colspan="6">
                        <%= attendance.check_box :approved, checked: attendance.object.approved %>
                      </td>
                      <td colspan="6"><%= attendance.text_field :note, class: "form-control" %></td>
                      <td colspan="6">
                        <%= f.select :attendance_type, options_for_select(["申請中", "承認", "否認"]), 
                        { include_blank: true }, class: "form-control" %>
                      </td>
                    </tr>
                  <% end %>
                <% end %>
              </tbody>
            </table> 
            <%= f.submit "変更を送信する", class: "btn btn-primary btn-block modal-btn" %>
          </div>
        </div>
      </div>
    </div>
<% end %>


<%= provide(:title, "show") %>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr class="text-center">
      <td colspan="3">
        <%= link_to "⇦", user_path(date: @first_day.prev_month), class: "btn btn-primary btn-sm" %>
        　<%= l(@first_day, format: :middle) %> 時間管理表　 
        <%= link_to "⇨", user_path(date: @first_day.next_month), class: "btn btn-primary btn-sm" %>
      </td>
      <td colspan="3">
      指定勤務開始時間 : 
      <%= format_basic_info(@user.designated_work_start_time) %><br>
      指定勤務終了時間 : 
      <%= format_basic_info(@user.designated_work_end_time) %>
      </td>
      <td colspan="4">
        基本時間 : <%= format_basic_info(@user.basic_time) %>
      </td>
      <td>初日　<%= l(@first_day, format: :short) %></td>
    </tr>
    
    <tr class="text-center">
      <td colspan="3">
        所属 : <%= @user.affiliation.present? ? @user.affiliation : "未所属" %>
      </td>
      <td colspan="3">氏名 : <%= @user.name %></td>
      <td>コード</td>
      <td>１</td>
      <td colspan="2">出勤日数 : <%= @worked_sum %>日</td>
      <td colspan="2">締め　<%= l(@last_day, format: :short) %></td>
    </tr>
  </thead>
</table>

<p>【 所属長承認申請のお知らせ 】</p>
<p>【 勤怠変更申請のお知らせ 】</p>

<% if current_user.superior? %>
  <div>
  <%= link_to "【 残業申請のお知らせ 】", attendances_overtime_req_confirm_user_path(date: params[:date]), remote: true %>
  </div>
<% end %>

<div>
  <%= link_to "勤怠を編集", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-primary" %>
  <%= link_to "CVS出力", "#", class: "btn btn-primary" %>
</div>
  <%= link_to "勤怠修正ログ（承認済）", "#", class: "btn btn-primary" %>
  

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr class="text-center">
      <td rowspan="3">残業申請</td>
      <td rowspan="3">日付</td>
      <td rowspan="3">曜日</td>
      <td colspan="8">【 実績 】</td>
      <td colspan="6">所定外勤務</td>
    </tr>
    
    <tr class="text-center">
      <td colspan="3">出社</td>
      <td colspan="3">退社</td>
      <td rowspan="2">在社時間</td>
      <td rowspan="2">備考</td>
      <td colspan="2">終了予定時間</td>
      <td rowspan="2">時間外時間</td>
      <td rowspan="2">業務処理内容</td>
      <td rowspan="2">指示者確認㊞</td>
    </tr>
    
     <tr class="text-center">
      <td>時</td>
      <td>分</td>
      <td></td>
      <td>時</td>
      <td>分</td>
      <td></td>
      <td>時</td>
      <td>分</td>
    </tr>
    
  </thead>
  
  <tbody>
     <% @attendances.each do |day| %>
      <tr class="text-center">
        <td>
          <%= link_to "残業申請", attendances_edit_overtime_req_user_path(date: day.worked_on), remote: true, class: "btn btn-primary"%>
        </td>
        <td><%= l(day.worked_on, format: :short) %></td>
        <td><%= $days_of_the_week[day.worked_on.wday] %></td>
        <td><%= l(day.started_at, format: :time_hour) if day.started_at.present? %></td>
        <td><%= l(day.started_at, format: :time_minites) if day.started_at.present? %></td>
        <td>
          <% if (Date.current == day.worked_on) && day.started_at.nil? %>
            <%= link_to "出社", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary" %>
          <% end %>
        </td>
        <td><%= l(day.finished_at, format: :time_hour) if day.finished_at.present? %></td>
        <td><%= l(day.finished_at, format: :time_minites) if day.finished_at.present? %></td>
        <td>
          <% if (Date.current == day.worked_on) && day.started_at.present? && day.finished_at.nil? %>
            <%= link_to "退社", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary" %>
          <% end %>
        </td>
        <td>
          <% if day.started_at.present? && day.finished_at.present? %>
            <%= str_times = working_times(day.started_at, day.finished_at) %>
            <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
          <% end %>
        </td>
        <td><%= day.note %></td>
        <td><%= l(day.ended_at, format: :time_hour) if day.ended_at.present? %></td>
        <td><%= l(day.ended_at, format: :time_minites) if day.ended_at.present? %></td>
        <td></td>
        <td><%= day.task_description %></td>
        <td>
          <% if day.approval_status.in?(["上長A", "上長B"]) %>
            <%= "#{day.approval_status}へ残業申請中" %>
          <% elsif day.approval_status == "承認" %>
            <%= "#{day.approval_status}から残業申請: 承認済" %>
          <% elsif day.approval_status == "否認" %>
            <%= "#{day.approval_status}から残業申請: 否認" %>
          <% else %>
            <!-- 表示内容なし -->
          <% end %>
        </td>
      </tr> 
    <% end %>
  </tbody>
  
  <tfoot>
    <tr class="text-center">
      <td></td>
      <td colspan="2"></td>
      <td colspan="6"></td>
      <td><%= format("%.2f", @total_working_times.to_f) %></td>
      <td colspan="5"></td> 
      <td> 
      <p>所属長承認　未 </p> 
      <div>
        
      </div>
      </td>
    </tr>
  </tfoot>
</table>

<!--モーダルウインドウ表示-->
